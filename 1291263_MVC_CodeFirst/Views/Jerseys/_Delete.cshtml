@model _1291263_MVC_CodeFirst.Models.Jersey

<div class="modal-header">
    <h4 class="modal-title font-weight-bold text-white">Delete Kit</h4>
    <button type="button" class="close text-white" onclick="closeModal()" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@using (Html.BeginForm("Delete", "Jerseys", FormMethod.Post, new { id = "deleteForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.JerseyId)

    <div class="modal-body text-center">
        <div class="mb-3">
            <span style="font-size: 3rem; filter: drop-shadow(0 0 10px rgba(255,0,0,0.4));">🗑️</span>
        </div>

        <h4 class="text-white font-weight-bold">Are you sure?</h4>
        <p class="text-muted">Do you really want to delete this record? This process cannot be undone.</p>

        <hr style="border-color: rgba(255,255,255,0.1);" />

        <div class="d-flex justify-content-center mt-4">
            <dl class="text-left">
                <dt class="text-muted text-uppercase small">Jersey Name</dt>
                <dd class="text-white font-weight-bold h5 mb-3">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="text-muted text-uppercase small">Team</dt>
                <dd class="text-white font-weight-bold h5">@Html.DisplayFor(model => model.Team.TeamName)</dd>
            </dl>
        </div>
    </div>

    <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-outline-light px-4" onclick="closeModal()">Cancel</button>
        <button type="submit" class="btn btn-danger font-weight-bold px-4 shadow-lg">Confirm Delete</button>
    </div>
}
