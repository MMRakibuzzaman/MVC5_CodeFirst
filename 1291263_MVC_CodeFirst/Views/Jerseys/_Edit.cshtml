@model _1291263_MVC_CodeFirst.Models.ViewModels.JerseyEditModel

<div class="modal-header">
    <h4 class="modal-title font-weight-bold">Edit Kit</h4>
    <button type="button" class="close text-white" onclick="closeModal()" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@using (Html.BeginForm("Edit", "Jerseys", FormMethod.Post, new { enctype = "multipart/form-data", id = "editForm" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.JerseyId)
        @Html.HiddenFor(m => m.ExistingPicture)

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "text-light" })
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.TeamId, new { @class = "text-light" })
                    @Html.DropDownList("TeamId", null, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.ReleaseDate, new { @class = "text-light" })
                    @Html.EditorFor(m => m.ReleaseDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-2">
                    @Html.LabelFor(m => m.Picture, new { @class = "text-light" })
                    <input type="file" name="Picture" class="form-control" onchange="previewImage(this)" />
                </div>

                <div class="text-center mt-2 p-2" style="background: rgba(255,255,255,0.05); border-radius: 10px;">
                    <img id="imgPreview" src="~/Images/@Model.ExistingPicture"
                         style="max-width: 100%; height: 110px; object-fit: contain; border-radius: 5px;" />
                </div>

                <div class="form-group mt-3">
                    <div class="custom-control custom-checkbox">
                        <label class="text-light">
                            @Html.EditorFor(m => m.IsAvailable)
                            <span class="ml-2">Available for Sale?</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <hr style="border-color: rgba(255,255,255,0.1);" />

        <h5 class="text-white mb-3">Stock Inventory</h5>

        <div class="table-responsive">
            <table class="table table-borderless text-white" id="stockTable">
                <thead style="background: rgba(255,255,255,0.1); border-radius: 5px;">
                    <tr>
                        <th width="30%">Size</th>
                        <th width="30%">Price</th>
                        <th width="30%">Qty</th>
                        <th width="10%"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Stocks.Count; i++)
                    {
                        <tr>
                            <td>@Html.EnumDropDownListFor(x => x.Stocks[i].Size, new { @class = "form-control form-control-sm" })</td>
                            <td>@Html.EditorFor(x => x.Stocks[i].Price, new { htmlAttributes = new { @class = "form-control form-control-sm" } })</td>
                            <td>@Html.EditorFor(x => x.Stocks[i].Quantity, new { htmlAttributes = new { @class = "form-control form-control-sm" } })</td>
                            <td>
                                <button type="button" class="btn btn-outline-danger btn-sm rounded-circle" onclick="removeRow(this)" style="width: 30px; height: 30px; padding: 0;">&times;</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <button type="button" class="btn btn-sm btn-glass" onclick="addRow()">+ Add Size Variant</button>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-outline-light" onclick="closeModal()">Close</button>
        <button type="submit" class="btn btn-primary font-weight-bold px-4">Update Kit</button>
    </div>
}
