@model _1291263_MVC_CodeFirst.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <div class="glass-card p-5">
            <div class="text-center mb-4">
                <h2 class="font-weight-bold text-white">Create Account</h2>
                <p class="text-muted">Join us to manage your collection</p>
            </div>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "text-light" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "name@example.com" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "text-light" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••" })
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "text-light" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "••••••••" })
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Sign Up" class="btn btn-glass btn-block w-100 font-weight-bold" style="padding: 10px;" />
                </div>

                <div class="text-center mt-3">
                    <span class="text-muted">Already have an account?</span>
                    @Html.ActionLink("Log in here", "Login", null, new { @class = "text-white font-weight-bold ml-1", style = "text-decoration: underline;" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
