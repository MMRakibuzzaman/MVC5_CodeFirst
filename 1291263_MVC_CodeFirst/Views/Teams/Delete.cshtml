@model _1291263_MVC_CodeFirst.Models.Team

@{
    ViewBag.Title = "Delete Team";
}

<div class="row justify-content-center" style="margin-top: 50px;">
    <div class="col-md-6">
        <div class="glass-card p-5">
            <div class="text-center mb-4">
                <div class="mb-3">
                    <span style="font-size: 3rem;">⚠️</span>
                </div>
                <h2 class="text-white font-weight-bold">Delete Team?</h2>
                <h4 class="text-danger">Are you sure you want to delete this?</h4>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>

            <hr style="border-color: rgba(255,255,255,0.1);" />

            <div class="my-4 text-center">
                <dl class="dl-horizontal text-white">
                    <dt class="text-muted text-uppercase small">
                        @Html.DisplayNameFor(model => model.TeamName)
                    </dt>

                    <dd class="font-weight-bold" style="font-size: 1.5rem;">
                        @Html.DisplayFor(model => model.TeamName)
                    </dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <input type="submit" value="Confirm Delete" class="btn btn-danger btn-lg font-weight-bold shadow-lg" />

                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-light btn-lg ml-2" })
                </div>
            }
        </div>
    </div>
</div>
