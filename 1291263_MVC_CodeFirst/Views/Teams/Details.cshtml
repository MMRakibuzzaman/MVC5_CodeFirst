@model _1291263_MVC_CodeFirst.Models.Team

@{
    ViewBag.Title = "Team Details";
}

<div class="row justify-content-center" style="margin-top: 50px;">
    <div class="col-md-6">
        <div class="glass-card p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white font-weight-bold m-0">Team Details</h2>
                <span style="font-size: 2rem;">🛡️</span>
            </div>

            <hr style="border-color: rgba(255,255,255,0.1);" />

            <div class="my-5 text-center">
                <dl class="dl-horizontal text-white">
                    <dt class="text-muted text-uppercase small mb-2">
                        @Html.DisplayNameFor(model => model.TeamName)
                    </dt>

                    <dd class="font-weight-bold display-4">
                        @Html.DisplayFor(model => model.TeamName)
                    </dd>
                </dl>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit Team", "Edit", new { id = Model.TeamId }, new { @class = "btn btn-glass btn-lg px-4" })
                }
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-light btn-lg ml-2 px-4" })
            </div>
        </div>
    </div>
</div>
